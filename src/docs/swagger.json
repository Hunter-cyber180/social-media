{
  "openapi": "3.0.0",
  "info": {
    "title": "APP API",
    "version": "1.0.0",
    "description": "Swagger docs for social app api"
  },
  "components": {
    "securitySchemes": {
      "Authorization": {
        "type": "apiKey",
        "name": "Authorization",
        "scheme": "bearer",
        "in": "header",
        "description": "User token authorization: **Bearer [token]**"
      }
    }
  },
  "tags": [
    {
      "name": "Auth",
      "description": "routes for authentication"
    },
    {
      "name": "Page",
      "description": "routes for user page"
    },
    {
      "name": "Comment",
      "description": "routes for comments"
    },
    {
      "name": "User",
      "description": "routes for users"
    },
    {
      "name": "Follow",
      "description": "routes for followers and followings"
    },
    {
      "name": "Save",
      "description": "routes for saves"
    },
    {
      "name": "Like",
      "description": "routes for likes"
    },
    {
      "name": "Reply Comment",
      "description": "routes for reply comments"
    },
    {
      "name": "Post",
      "description": "routes for posts"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register User Authentication",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "email": "test@gmail.com",
                  "username": "alexDRay",
                  "name": "Alex",
                  "password": "Alex@Dray2077"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully"
          },
          "409": {
            "description": "Duplicate username or email"
          },
          "400": {
            "description": "Body is not valid"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/pages/{userID}/{pageID}": {
      "get": {
        "tags": ["Page"],
        "summary": "Get user page data",
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "pageID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successfully user page response"
          },
          "500": {
            "description": "Internal Server Error"
          },
          "400": {
            "description": "Bad Request Error"
          },
          "404": {
            "description": "Not Found Error"
          }
        }
      }
    },
    "/follow/{userID}/{pageID}": {
      "post": {
        "tags": ["Follow"],
        "summary": "Follow User Page",
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "pageID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "security": [
          {
            "Authorization": []
          }
        ],
        "responses": {
          "200": {
            "description": "successfully following"
          },
          "500": {
            "description": "Internal Server Error"
          },
          "404": {
            "description": "Not Found Error"
          },
          "400": {
            "description": "Bad Request Error"
          }
        }
      }
    },
    "/saves/{userID}": {
      "post": {
        "tags": ["Save"],
        "summary": "Get All User Saves",
        "parameters": [
          {
            "name": "userID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successfully response"
          },
          "500": {
            "description": "Internal Server Error"
          },
          "400": {
            "description": "Bad Request Error"
          },
          "404": {
            "description": "Not Found Error"
          }
        }
      }
    },
    "/comments": {
      "post": {
        "tags": ["Comment"],
        "summary": "Send A Comment",
        "requestBody": {},
        "responses": {
          "200": {
            "description": "successfully response"
          },
          "500": {
            "description": "Internal Server Error"
          },
          "400": {
            "description": "Bad Request Error"
          }
        }
      }
    }
  }
}
